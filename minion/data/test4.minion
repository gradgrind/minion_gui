&GRADES_I: [
    [   [1+, 1, 1-],   "sehr gut"      ],
    [   [2+, 2, 2-],   "gut"           ],
    [   [3+, 3, 3-],   "befriedigend"  ],
    [   [4+, 4, 4-],  "ausreichend"   ],
    [   [5+, 5, 5-],   "mangelhaft"    ],
    [   [6],         "ungenügend"    ],
    [   [nt],        "nicht teilgenommen"],
    [   [t],         "teilgenommen"  ],
    [   [ne],        "nicht erteilt" ],
    [   [nb],        "kann nicht beurteilt werden"],
    [   [*, /],       "––––––"        ],
],

&GRADES_II: [
    [   [15, 14, 13],  ""],
    [   [12, 11, 10],  ""],
    [   [09, 08, 07],  ""],
    [   [06, 05, 04],  ""],
    [   [03, 02, 01],  ""],
    [   [00],        ""],
#    [   [nt],        "nicht teilgenommen"],
#    [   [t],         "teilgenommen"],
#    [   [ne],        "nicht erteilt" ],
#    [   [nb],        "kann nicht beurteilt werden"],
    [   [*, /],       "––––––"]
],

&ABI_GRADES: [
    [   [*],         ""],
    [   [15, 14, 13],  ""],
    [   [12, 11, 10],  ""],
    [   [09, 08, 07],  ""],
    [   [06, 05, 04],  ""],
    [   [03, 02, 01],  ""],
    [   [00],        ""]
],

### „Sammelfächer“
&COMPOSITE_KUNST_I: {
    # für 12G.R und 11G
    TYPE:   COMPOSITE,
    SID:    Ku_,
    NAME:   Kunst,
    GROUP:  A,
    COMPONENTS: [Bb, Kbe, Kge, Mal, Mz, Pls, Sth],
    FUNCTION:   ROUNDED_AVERAGE_I,
},

&COMPOSITE_KUNST_II: {
    # für 12G.G
    TYPE:   COMPOSITE,
    SID:    Ku_,
    NAME:   Kunst,
    GROUP:  A,
    COMPONENTS: [Bb, Kbe, Kge, Mal, Mz, Pls, Sth],
    FUNCTION:   ROUNDED_AVERAGE_II,
},

&COMPOSITE_NULL: {
    # Sonderfall: Die Noten werden für Durchschnitte, usw. nicht berücksichtigt
    TYPE:   COMPOSITE,
    SID:    _,
    NAME:   "",
    GROUP:  "",
    COMPONENTS: [Eu],
    FUNCTION:   ""
},

### berechnete Felder
&CALCULATE_AVE: {
    # Durchschnittsnote aller relevanten Fächer
    TYPE:   CALCULATE,
    SID:    D_,
    NAME:   "Φ alle Fächer",
    # COMPONENTS: "keine", also alle Fächer, die nicht Sammelfach-Komponenten sind
    FUNCTION:   AVERAGE_I
},

&CALCULATE_AVE_DEM: {
    # Durchschnittsnote der Fächer Deutsch, Englisch und Mathematik
    TYPE:   CALCULATE,
    SID:    D_dem,
    NAME:   "Φ De-En-Ma",
    COMPONENTS: [De, En, Ma],
    FUNCTION:   AVERAGE_I
},

&Einzelzeugnis_Standard: [
    "Einzelzeugnis", {
        INSTANCE: tag,   # => any string value
        INDIVIDUAL: True, # eine nicht leere Zeichenkette 
        GRADES: &GRADES_I,
        EXTRA_FIELDS: [
            {
                TYPE:   INPUT,
                METHOD: CHOICE_MAP,
                SID:    REPORT_TYPE,
                NAME:   Zeugnis-Art,
                PARAMETERS: {
                    CHOICES: [
                        ["",         ""],
                        [Abgang,     "grade_reports/SekI-Abgang"],
                        [Zeugnis,    "grade_reports/SekI-Extra"]
                    ]
                }
            },
            {
                TYPE:   TEXT,
                SID:    REMARKS,
                NAME:   Bemerkungen
            }
        ]
    }
],

